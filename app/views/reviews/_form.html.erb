<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: %w(0 1 2 3 4 5) %>
  </div>

  <div class="form-actions">
    <%= f.submit "add a review", class: "btn-vale-success" %>
  </div>
<% end %>
